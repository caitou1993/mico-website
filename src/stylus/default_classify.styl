@charset 'utf-8';

body {
    background: #f2f2f2;
}

.main .tab {
    display: flex;
    position: relative;
    z-index: 2;
    height: 40px;
    line-height: 40px;
    text-align: center;
    font-size: 14px;
    background: #fff;
}
.main .tab .tab-item {
    -webkit-flex: 1;
    flex: 1;
}
.main .tab-item .text {
    display: inline-block;
    box-sizing: border-box;
    height: 40px;
}
.main .tab-item.active .text {
    color: #4c93fd;
    border-bottom:2px solid #4c93fd;
}